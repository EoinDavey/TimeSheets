<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/safety_fragment_table_1" >
        
        <!-- row 1 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_fragment_layout_padding" >
            
            <Button
                android:layout_width="@dimen/main_fragment_button_width_dimen"
                android:layout_height = "@dimen/main_fragment_button_height_dimen"
                android:text="Site Conditions"
                android:textSize="@dimen/main_fragment_button_font"
                android:layout_marginRight="@dimen/main_fragment_layout_padding"
                android:onClick="showSiteConditions"/>
            <Button
                android:layout_width="@dimen/main_fragment_button_width_dimen"
                android:layout_height = "@dimen/main_fragment_button_height_dimen"
                android:text="PPE"
                android:textSize="@dimen/main_fragment_button_font"
                android:onClick="showPPE" />
            
        </LinearLayout>
        <!-- row 2 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_fragment_layout_padding"
             >
            <Button
                android:layout_width="@dimen/main_fragment_button_width_dimen"
                android:layout_height = "@dimen/main_fragment_button_height_dimen"
                android:text="Lock out tag out"
                android:textSize="@dimen/main_fragment_button_font"
                android:layout_marginRight="@dimen/main_fragment_layout_padding"
                android:onClick="showLockOut" />

            <Button
                android:layout_width="@dimen/main_fragment_button_width_dimen"
                android:layout_height="@dimen/main_fragment_button_height_dimen"
                android:text="Manual Handling"
                android:textSize="@dimen/main_fragment_button_font"
                android:onClick="showManualHandling" />

        </LinearLayout>
        <!-- row 3 -->
        <LinearLayout 
            android:orientation = "horizontal"
            android:baselineAligned="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_fragment_layout_padding" >
            <Button
                android:layout_width="@dimen/main_fragment_button_width_dimen"
                android:layout_height = "@dimen/main_fragment_button_height_dimen"
                android:text="Working At Height"
                android:textSize="@dimen/main_fragment_button_font"
                android:layout_marginRight="@dimen/main_fragment_layout_padding"
                android:onClick="showWorkingAtHeight" />
            <Button
                android:layout_width="@dimen/main_fragment_button_width_dimen"
                android:layout_height = "@dimen/main_fragment_button_height_dimen"
                android:text="Other"
                android:textSize="@dimen/main_fragment_button_font"
                android:onClick="showSafetyOther" />
        </LinearLayout>
        
    </LinearLayout>
    
</RelativeLayout>