<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.powerblock.timesheetsalpha.MainActivity$PlaceholderFragment" >
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/main_fragment_table_1" >
        
        <!-- row 1 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_fragment_layout_padding" >
            
            <Button
                android:layout_width="@dimen/main_fragment_button_width_dimen"
                android:layout_height = "@dimen/main_fragment_button_height_dimen"
                android:text="Job Setup"
                android:textSize="@dimen/main_fragment_button_font"
                android:layout_marginRight="@dimen/main_fragment_layout_padding"
                android:onClick="showJobSetup"/>
            <Button
                android:layout_width="@dimen/main_fragment_button_width_dimen"
                android:layout_height = "@dimen/main_fragment_button_height_dimen"
                android:text="Safety"
                android:textSize="@dimen/main_fragment_button_font"
                android:onClick="showSafety" />
            
        </LinearLayout>
        
        <!-- row 2 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_fragment_layout_padding"
             >
            <Button
                android:layout_width="@dimen/main_fragment_button_width_dimen"
                android:layout_height = "@dimen/main_fragment_button_height_dimen"
                android:text="Equipment"
                android:textSize="@dimen/main_fragment_button_font"
                android:layout_marginRight="@dimen/main_fragment_layout_padding"
                android:onClick="showEquipment" />

            <Button
                android:layout_width="@dimen/main_fragment_button_width_dimen"
                android:layout_height="@dimen/main_fragment_button_height_dimen"
                android:text="Materials"
                android:textSize="@dimen/main_fragment_button_font"
                android:onClick="showMaterials" />

        </LinearLayout>
        
        <!-- row 3 -->
        <LinearLayout 
            android:orientation = "horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_fragment_layout_padding" >
            <Button
                android:layout_width="@dimen/main_fragment_button_width_dimen"
                android:layout_height = "@dimen/main_fragment_button_height_dimen"
                android:text="Testing"
                android:textSize="@dimen/main_fragment_button_font"
                android:layout_marginRight="@dimen/main_fragment_layout_padding"
                android:onClick="showTesting" />
            <Button
                android:layout_width="@dimen/main_fragment_button_width_dimen"
                android:layout_height = "@dimen/main_fragment_button_height_dimen"
                android:text="Time"
                android:textSize="@dimen/main_fragment_button_font"
                android:onClick="showTime" />
        </LinearLayout>
        
        <LinearLayout 
            android:orientation = "horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/main_fragment_layout_padding" >
            
            <Button android:layout_width="@dimen/main_fragment_button_width_dimen"
            android:layout_height = "@dimen/main_fragment_button_height_dimen"
            android:text="Save"
            android:textSize="@dimen/main_fragment_button_font"
            android:layout_marginRight="@dimen/main_fragment_layout_padding"
            android:onClick="showSaveDialog" />
            
            <Button android:layout_width="@dimen/main_fragment_button_width_dimen"
            android:layout_height = "@dimen/main_fragment_button_height_dimen"
            android:text="Load"
            android:textSize="@dimen/main_fragment_button_font"
            android:onClick="showLoadDialog" />
            
        </LinearLayout>
        
    </LinearLayout>
    
    <Button android:layout_width="@dimen/main_fragment_button_width_dimen"
        android:layout_height="@dimen/main_fragment_button_height_dimen"
        android:text="Email"
        android:textSize="@dimen/main_fragment_button_font"
        android:onClick="showEmailDialog"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/main_fragment_table_1"/>

</RelativeLayout>
