<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:custom="http://schemas.android.com/apk/res/com.powerblock.timesheets"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView
        android:id="@+id/safety_text_conditions"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="No. 1 Site Conditions"
        android:textSize="@dimen/safety_font"
        android:layout_marginBottom="40dp" />
    
    <TableLayout 
        android:id="@+id/safety_site_table_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/safety_text_conditions">
        <TableRow android:baselineAligned="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
		            android:layout_width="@dimen/safety_cell_width"
		            android:layout_height="@dimen/safety_cell_height"
		            android:text="Where the work is to be carried out"
		            android:textSize="@dimen/safety_font"
		            android:background="@drawable/cell_background"
		            android:gravity="center_vertical|center_horizontal" />
        </TableRow>
        <TableRow android:baselineAligned="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <com.powerblock.timesheets.CustomSpinner
		            android:id="@+id/safety_site_conditions_work_area"
		            android:layout_width="@dimen/safety_cell_width"
		            android:layout_height="@dimen/safety_cell_height"
		            android:textSize="@dimen/safety_font"
		            android:background="@drawable/cell_background"
		            android:prompt="@string/prompt"
		           	custom:entries="work_area" />
        </TableRow>
    </TableLayout>
    
    <TableLayout
        android:id="@+id/safety_site_table_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/safety_site_table_1"
        android:layout_marginTop="40dp" >
        <TableRow android:baselineAligned="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cell_background"
            android:padding="2dp" >
            <com.powerblock.timesheets.CustomCheckBox android:id="@+id/safety_site_conditions_checkbox_1"
			        custom:icon_image="@drawable/trip_hazard"
			     	android:padding="2dp"
			        android:background="@drawable/cell_background"
			        android:layout_width="@dimen/safety_image_dimen"
			        android:layout_height="@dimen/safety_image_dimen"/>
            <com.powerblock.timesheets.CustomCheckBox android:id="@+id/safety_site_conditions_checkbox_2"
			        custom:icon_image="@drawable/hot_works"
			     	android:padding="2dp"
			        android:background="@drawable/cell_background"
			        android:layout_width="@dimen/safety_image_dimen"
			        android:layout_height="@dimen/safety_image_dimen"/>
            <com.powerblock.timesheets.CustomCheckBox android:id="@+id/safety_site_conditions_checkbox_3"
			        custom:icon_image="@drawable/safety_notice"
			     	android:padding="2dp"
			        android:background="@drawable/cell_background"
			        android:layout_width="@dimen/safety_image_dimen"
			        android:layout_height="@dimen/safety_image_dimen"/>
            <com.powerblock.timesheets.CustomCheckBox android:id="@+id/safety_site_conditions_checkbox_4"
			        custom:icon_image="@drawable/induction"
			     	android:padding="2dp"
			        android:background="@drawable/cell_background"
			        android:layout_width="@dimen/safety_image_dimen"
			        android:layout_height="@dimen/safety_image_dimen"/>
        </TableRow>
        <TableRow android:baselineAligned="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cell_background"
            android:padding="2dp" >
            <com.powerblock.timesheets.CustomCheckBox android:id="@+id/safety_site_conditions_checkbox_5"
			        custom:icon_image="@drawable/training"
			     	android:padding="2dp"
			        android:background="@drawable/cell_background"
			        android:layout_width="@dimen/safety_image_dimen"
			        android:layout_height="@dimen/safety_image_dimen"/>
            <com.powerblock.timesheets.CustomCheckBox android:id="@+id/safety_site_conditions_checkbox_6"
			        custom:icon_image="@drawable/vacuum_cleaner"
			     	android:padding="2dp"
			        android:background="@drawable/cell_background"
			        android:layout_width="@dimen/safety_image_dimen"
			        android:layout_height="@dimen/safety_image_dimen"/>
            <com.powerblock.timesheets.CustomCheckBox android:id="@+id/safety_site_conditions_checkbox_7"
			        custom:icon_image="@drawable/caution_machinery"
			     	android:padding="2dp"
			        android:background="@drawable/cell_background"
			        android:layout_width="@dimen/safety_image_dimen"
			        android:layout_height="@dimen/safety_image_dimen"/>
            <com.powerblock.timesheets.CustomCheckBox android:id="@+id/safety_site_conditions_checkbox_8"
			        custom:icon_image="@drawable/caution_cars"
			     	android:padding="2dp"
			        android:background="@drawable/cell_background"
			        android:layout_width="@dimen/safety_image_dimen"
			        android:layout_height="@dimen/safety_image_dimen"/>
        </TableRow>
        <TableRow android:baselineAligned="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cell_background"
            android:padding="2dp" >
            <com.powerblock.timesheets.CustomCheckBox android:id="@+id/safety_site_conditions_checkbox_9"
			        custom:icon_image="@drawable/crossing_sign"
			     	android:padding="2dp"
			        android:background="@drawable/cell_background"
			        android:layout_width="@dimen/safety_image_dimen"
			        android:layout_height="@dimen/safety_image_dimen"/>
            <com.powerblock.timesheets.CustomCheckBox android:id="@+id/safety_site_conditions_checkbox_10"
			        custom:icon_image="@drawable/meter"
			     	android:padding="2dp"
			        android:background="@drawable/cell_background"
			        android:layout_width="@dimen/safety_image_dimen"
			        android:layout_height="@dimen/safety_image_dimen"/>
            <com.powerblock.timesheets.CustomCheckBox android:id="@+id/safety_site_conditions_checkbox_11"
			        custom:icon_image="@drawable/shock_sign"
			     	android:padding="2dp"
			        android:background="@drawable/cell_background"
			        android:layout_width="@dimen/safety_image_dimen"
			        android:layout_height="@dimen/safety_image_dimen"/>
            <com.powerblock.timesheets.CustomCheckBox android:id="@+id/safety_site_conditions_checkbox_12"
			        custom:icon_image="@drawable/explosive_atmosphere"
			     	android:padding="2dp"
			        android:background="@drawable/cell_background"
			        android:layout_width="@dimen/safety_image_dimen"
			        android:layout_height="@dimen/safety_image_dimen"/>
        </TableRow><TableRow android:baselineAligned="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cell_background"
            android:padding="2dp" >
            <com.powerblock.timesheets.CustomCheckBox android:id="@+id/safety_site_conditions_checkbox_13"
			        custom:icon_image="@drawable/chemicals"
			     	android:padding="2dp"
			        android:background="@drawable/cell_background"
			        android:layout_width="@dimen/safety_image_dimen"
			        android:layout_height="@dimen/safety_image_dimen"/>
            <com.powerblock.timesheets.CustomCheckBox android:id="@+id/safety_site_conditions_checkbox_14"
			        custom:icon_image="@drawable/stairway"
			     	android:padding="2dp"
			        android:background="@drawable/cell_background"
			        android:layout_width="@dimen/safety_image_dimen"
			        android:layout_height="@dimen/safety_image_dimen"/>
            <com.powerblock.timesheets.CustomCheckBox android:id="@+id/safety_site_conditions_checkbox_15"
			        custom:icon_image="@drawable/wet_floor"
			     	android:padding="2dp"
			        android:background="@drawable/cell_background"
			        android:layout_width="@dimen/safety_image_dimen"
			        android:layout_height="@dimen/safety_image_dimen"/>
            <com.powerblock.timesheets.CustomCheckBox android:id="@+id/safety_site_conditions_checkbox_16"
			        custom:icon_image="@drawable/watch_step"
			     	android:padding="2dp"
			        android:background="@drawable/cell_background"
			        android:layout_width="@dimen/safety_image_dimen"
			        android:layout_height="@dimen/safety_image_dimen"/>
        </TableRow>
        <TableRow android:baselineAligned="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cell_background"
            android:padding="2dp" >
            <com.powerblock.timesheets.CustomCheckBox android:id="@+id/safety_site_conditions_checkbox_17"
			        custom:icon_image="@drawable/asbestos"
			     	android:padding="2dp"
			        android:background="@drawable/cell_background"
			        android:layout_width="@dimen/safety_image_dimen"
			        android:layout_height="@dimen/safety_image_dimen"/>
            <com.powerblock.timesheets.CustomCheckBox android:id="@+id/safety_site_conditions_checkbox_18"
			        custom:icon_image="@drawable/confined_space"
			     	android:padding="2dp"
			        android:background="@drawable/cell_background"
			        android:layout_width="@dimen/safety_image_dimen"
			        android:layout_height="@dimen/safety_image_dimen"/>
            <com.powerblock.timesheets.CustomCheckBox android:id="@+id/safety_site_conditions_checkbox_19"
			        custom:icon_image="@drawable/sharp_hazard"
			     	android:padding="2dp"
			        android:background="@drawable/cell_background"
			        android:layout_width="@dimen/safety_image_dimen"
			        android:layout_height="@dimen/safety_image_dimen"/> 
            <com.powerblock.timesheets.CustomEditText android:id="@+id/safety_site_conditions_checkbox_20"
			     	android:padding="2dp"
			        android:background="@drawable/cell_background"
			        android:layout_width="@dimen/safety_image_dimen"
			        android:layout_height="@dimen/safety_image_dimen"
			        android:hint="Add"/>
        </TableRow>
    </TableLayout>

</RelativeLayout>
</ScrollView>
