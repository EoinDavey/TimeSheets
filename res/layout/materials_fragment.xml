<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.powerblock.timesheetsalpha.MainActivity$PlaceholderFragment">
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height = "wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/materials_fragment_table_1" >
    
	    <LinearLayout
	            android:orientation="horizontal"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="@dimen/main_fragment_layout_padding" >
	            
	            <Button
	                android:layout_width="@dimen/main_fragment_button_width_dimen"
	                android:layout_height = "@dimen/main_fragment_button_height_dimen"
	                android:text="Lighting"
	                android:textSize="@dimen/main_fragment_button_font"
	                android:layout_marginRight="@dimen/main_fragment_layout_padding"
	                android:onClick="showMaterialsLighting"/>
	            <Button
	                android:layout_width="@dimen/main_fragment_button_width_dimen"
	                android:layout_height = "@dimen/main_fragment_button_height_dimen"
	                android:text="Power"
	                android:textSize="@dimen/main_fragment_button_font"
	                android:onClick="showMaterialsPower" />
	            
	    </LinearLayout>
	    <LinearLayout
	            android:orientation="horizontal"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginBottom="@dimen/main_fragment_layout_padding">
	            
	            <Button
	                android:layout_width="@dimen/main_fragment_button_width_dimen"
	                android:layout_height = "@dimen/main_fragment_button_height_dimen"
	                android:text="Data"
	                android:textSize="@dimen/main_fragment_button_font"
	                android:layout_marginRight="@dimen/main_fragment_layout_padding"
	                android:onClick="showMaterialsData"/>
	            <Button
	                android:layout_width="@dimen/main_fragment_button_width_dimen"
	                android:layout_height = "@dimen/main_fragment_button_height_dimen"
	                android:text="Containment"
	                android:textSize="@dimen/main_fragment_button_font"
	                android:onClick="showMaterialsContainment" />
	            
	    </LinearLayout>
    </LinearLayout>
    
    <Button
		android:layout_width="@dimen/main_fragment_button_width_dimen"
		android:layout_height = "@dimen/main_fragment_button_height_dimen"
		android:layout_centerHorizontal="true"
		android:text="Cable"
		android:textSize="@dimen/main_fragment_button_font"
		android:layout_marginRight="@dimen/main_fragment_layout_padding"
		android:layout_below="@id/materials_fragment_table_1"
		android:onClick="showMaterialsCable"/>
</RelativeLayout>
